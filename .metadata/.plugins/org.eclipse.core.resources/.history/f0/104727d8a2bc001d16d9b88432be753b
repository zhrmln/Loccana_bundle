<?xml version="1.0" encoding="UTF-8"?>
<sequence name="LoccanaSellingsGetDetail" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <dataServiceCall description="Get selling detail" serviceName="LoccanaSellingDataService">
        <operations type="single">
            <operation name="getSellingsDetail">
                <param evaluator="xml" expression="get-property('sellingsId')" name="id"/>
            </operation>
        </operations>
        <source type="inline"/>
        <target type="body"/>
    </dataServiceCall>
    <property expression="json-eval($)" name="resultData" scope="default" type="STRING"/>
    <log description="Log start" level="custom">
        <property expression="get-property('resultData')" name="selling id"/>
    </log>
    <filter regex="true" source="boolean(get-property('resultData'))">
        <then>
            <property expression="json-eval($.data)" name="data" scope="default" type="STRING"/>
        </then>
        <else/>
    </filter>
    <property expression="json-eval($.data.selling.no_selling)" name="no_selling" scope="default" type="STRING"/>
    <property expression="json-eval($.data.selling.id)" name="id_selling" scope="default" type="STRING"/>
    <log description="Log start" level="custom">
        <property expression="get-property('id_selling')" name="id_selling"/>
    </log>
</sequence>
