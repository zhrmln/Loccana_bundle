<?xml version="1.0" encoding="UTF-8"?>
<sequence name="LoccanaSellingInvoiceSearchID" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <dataServiceCall description="Get selling invoice detail" serviceName="LoccanaSellingDataService">
        <operations type="single">
            <operation name="getSellingInvoicesSearchID">
                <param evaluator="xml" expression="get-property('sellinginvoiceId')" name="id"/>
            </operation>
        </operations>
        <source type="inline"/>
        <target type="body"/>
    </dataServiceCall>
    <property expression="json-eval($)" name="resultData" scope="default" type="STRING"/>
    <log description="Log start" level="custom">
        <property expression="get-property('resultData')" name="selling invoice detail"/>
    </log>
    <filter regex="true" source="boolean(get-property('resultData'))">
        <then>
            <property expression="json-eval($.data)" name="data" scope="default" type="STRING"/>
        </then>
        <else/>
    </filter>
</sequence>
